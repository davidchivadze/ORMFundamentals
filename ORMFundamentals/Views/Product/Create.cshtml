@model ORMFundamentals.Domain.Models.ViewModels.Product.ProductViewModel
<div class="row">
    <div class="col-md-12">
        <h1><b>Create Product</b></h1>
        <hr />
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-4 jumbotron">
        <form asp-action="Create" asp-controller="Product">
            <div class="row">
                <div class="col-md-6"><h3>Name</h3></div>
                <div class="col-md-6"><input asp-for="Name" type="text" class="form-control" /></div>
            </div>
            <div class="row">
                <div class="col-md-6"><h3>Weight</h3></div>
                <div class="col-md-6"><input asp-for="Weight" type="number" class="form-control" /></div>
            </div>
            <div class="row">
                <div class="col-md-6"><h3>Height</h3></div>
                <div class="col-md-6"><input asp-for="Height" type="number" class="form-control" /></div>
            </div>
            <div class="row">
                <div class="col-md-6"><h3>Length</h3></div>
                <div class="col-md-6"><input asp-for="Length" type="number" class="form-control" /></div>
            </div>
                        <div class="row">
                <div class="col-md-6"><h3>Width</h3></div>
                <div class="col-md-6"><input asp-for="Width" type="number" class="form-control" /></div>
            </div>
            <div class="row">
                <input type="submit" value="Submit" class="btn btn-success form-control" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>