@model ORMFundamentals.Domain.Models.ViewModels.Product.GetProductsViewModel

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>

            <th>Name</th>
            <th>Width</th>
            <th>Height</th>
            <th>Weight</th>
            <th>Length</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model?.Products)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Width</td>
                <td>@item.Height</td>
                <td>@item.Weight</td>
                <td>@item.Length</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
        
                    @Html.ActionLink("Delete", "Delete",  new {  id=item.Id  })
                </td>
            </tr>
        }
    </tbody>
</table>
